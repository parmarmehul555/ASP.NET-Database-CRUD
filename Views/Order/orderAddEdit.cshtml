@{
}
@model web_app_MVC.Models.OrderModel

<div class="card">
    <div class="card-body">
        <h5 class="card-title fs-3 fw-bold">Order Add Edit Form</h5>

        <!-- Browser Default Validation -->
        <form class="row g-3" asp-controller="Order" asp-action="Save">
            <div class="col-md-4">
                <input type="hidden" class="form-control" id="validationDefault02" asp-for="OrderID">
            </div>
            <div class="col-md-4">
                <label for="validationDefault02" class="form-label">Order Date</label>
                <input type="date"  class="form-control" id="validationDefault02" asp-for="OrderDate">
            </div>
            <div class="col-md-4">
                <label for="validationDefaultUsername" class="form-label">Customer ID</label>
                <span class="text-danger">*</span>
                <select class="form-select" id="validationDefault04" asp-for="CustomerID" asp-items="@(new SelectList(ViewBag.customerDropdown,"CustomerID","CustomerName"))">
                    <option selected disabled value="">Choose...</option>
                </select>
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="validationDefault03" class="form-label">Payment Mode</label>
                <span class="text-danger"> *</span>
                <input type="text" class="form-control" id="validationDefault03" asp-for="PaymentMode">
                <span asp-validation-for="PaymentMode" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label for="validationDefault04" class="form-label">Total Amount</label>
                <span class="text-danger"> *</span>
                <input type="text" class="form-control" id="validationDefault04" asp-for="TotalAmount">
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label for="validationDefault05" class="form-label">Shipping Address</label>
                <input type="text" class="form-control" id="validationDefault05" asp-for="ShippingAddress">
            </div>
            <div class="col-md-4">
                <label for="inputState" class="form-label">UserID</label>
                <span class="text-danger"> *</span>
                <select id="inputState" class="form-select" asp-for="UserID" asp-items="@(new SelectList(ViewBag.userDropdown,"UserID","UserName"))">
                    <option selected disabled value="">Choose...</option>
                </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="col-12">
                <input type="submit" class="btn btn-info"></input>
                <button class="btn btn-danger" type="button" >Cancel</button>
            </div>
        </form>
        <!-- End Browser Default Validation -->

    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
