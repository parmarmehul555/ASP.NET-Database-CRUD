@* @model List<web_app_MVC.Models.ProductModel> *@

@using System.Data;
@model System.Data.DataTable;
<h1 class="fw-bold card-title fs-3 text-center">Product table</h1>
@{
    if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
}
    <table class="table table-striped-columns">
     <thead>
    <th>Product id</th>
    <th>Product name</th>
    <th>Product price</th>
    <th>Product code</th>
    <th>Description</th>
    <th>User Id</th>
    <th>Actions</th>
        </thead>
        <tbody>
            @foreach(DataRow product in Model.Rows){
                <tr>
                    <td>@product["ProductID"]</td>
                <td>@product["ProductName"]</td>
                <td>@product["ProductPrice"]</td>
                <td>@product["ProductCode"]</td>
                <td>@product["Description"]</td>
                <td>@product["UserID"]</td>
                <td><a asp-action="productAddEdit"><button class="btn btn-warning">Edit</button>
                    <a 
                        class="btn btn-danger"
                        asp-controller="Product"
                        asp-action="productDelete"
                           asp-route-productID="@product["ProductID"]">Delete</a>
                    </a>
                    </td>

                    
                </tr>
            }
        </tbody>

    </table>
<div><a asp-action="productAddEdit" asp-controller="Product"><div class="btn btn-primary">Add product</div></a></div>


